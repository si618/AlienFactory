<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AlienFactory.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AlienFactory.Views"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="AlienFactory.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/alien.ico"
        Title="{Binding Title}"
        Height="400"
        Width="800"
        MinHeight="300"
        MinWidth="600"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Orientation="Vertical">
        <Panel VerticalAlignment="Stretch" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Panel>
        <Panel HorizontalAlignment="Right" MinWidth="100">
            <views:SettingsView IsVisible="True" />
        </Panel>
        <Panel HorizontalAlignment="Stretch" VerticalAlignment="Bottom" MinHeight="100">
            <views:LogsView IsVisible="True" />
        </Panel>
    </StackPanel>
</Window>
